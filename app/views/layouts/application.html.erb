<!DOCTYPE html>
<html>
  <head>
    <title><%= yield(:title) %> | Ruby on Rails Tutorial Sample App</title>
    <%= render 'layouts/rails_default' %>
  </head>
  <%= render 'layouts/shim' %>
  <body>
    <%= render 'layouts/header' %>
    <% flash.each do |name, msgs| %>
      <ul class="<%= name %>" >
        <% msgs.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    <% end %>
    <div class="container">
      <%= yield %>
    </div>
    <%= render 'layouts/footer' %>
    <%= debug(params) if Rails.env.development? %>
  </body>
</html>
